
{
    "extends": "airbnb",
    "rules": {
        "indent": ["error", 4],
        "react/jsx-indent" : ["error", 4],
        "react/jsx-indent-props" : ["error", "first"],
        "react/jsx-filename-extension": ["warn", { "extensions": [".js", ".jsx", "ts", "tsx"] }],
        "react/prop-types": "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
              "js": "never",
              "jsx": "never",
              "ts": "never",
              "tsx": "never"
            }
         ],
        "import/no-unresolved": ["error", {"ignore": ["\\.css$"]}]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    },
    "env": {
        "browser": true
    }
}